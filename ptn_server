# -*- coding: utf-8 -*-

import logging
import os

try:
    os.mkdir('log')
except OSError:
    # Log directory already exists
    pass

log_file = os.path.join('log', 'ptnotes.log')

logging.basicConfig(
    level=logging.INFO,
    filename=log_file)

logging.info('Starting PTNotes server.')


import ptnotes.webserver as server
server.app.run(debug=False)
